<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "/WEB-INF/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.imust.newckbk.dao.SysUserDao">
    <resultMap id="sysUserMap" type="com.imust.newckbk.domain.SysUser">
		<result property="id" column="id" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result property="loginName" column="login_name" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result property="realName" column="real_name" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result property="password" column="password" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result property="roleIds" column="role_ids" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result property="salt" column="salt" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result property="remark" column="remark" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="updateBy" column="update_by" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
        <result property="deleted" column="deleted" javaType="java.lang.Byte" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="cols">
		id,
		login_name,
		real_name,
		password,
		role_ids,
		salt,
		remark,
		create_by,
		update_by,
		create_time,
		update_time,
		deleted
	</sql>

    <select id="getById" resultMap="sysUserMap" parameterType="java.lang.String">
		select <include refid="cols"/> from sys_user  sysUser
		 where id = #{id}
	</select>

    <select id="getByMap" resultMap="sysUserMap" parameterType="java.util.Map">
		select <include refid="cols"/> from sys_user  sysUser
		<where>
			<if test="loginName != null and loginName != ''" >
				login_name = #{loginName}
			</if>
		</where>
		<!-- 添加查询条件属性 -->
	</select>

    <select id="getByEntity" resultMap="sysUserMap" parameterType="com.imust.newckbk.domain.SysUser">
		select <include refid="cols"/> from sys_user  sysUser
		<!-- 添加查询条件属性 -->
	</select>

    <select id="getByPage" resultMap="sysUserMap" parameterType="com.imust.newckbk.page.Page">
		select <include refid="cols"/> from sys_user  sysUser
		<where>
			and deleted = 0
			<if test="p != null and p.username != null and p.username != ''">
				and (login_name like CONCAT('%',#{p.username},'%') or real_name like CONCAT('%',#{p.username},'%'))
			</if>
		</where>
		<!-- 添加查询条件属性 -->
	</select>
	<select id="getByMapPage" resultMap="sysUserMap" parameterType="java.util.Map">
		select <include refid="cols"/> from sys_user  sysUser
		<where>
			and deleted = 0
			<if test="username != null and username != ''">
				and (login_name like CONCAT('%',#{username},'%') or real_name like CONCAT('%',#{username},'%'))
			</if>
		</where>
		<!-- 添加查询条件属性 -->
	</select>

    <select id="getCount" resultType="java.lang.Integer">
		select count(1) from sys_user  sysUser
	</select>

    <select id="getCountByMap" resultType="java.lang.Integer">
		select count(1) from sys_user  sysUser
		<if test="whereSql != null and whereSql != ''" >
			<![CDATA[${whereSql}]]>
		</if>
		<!-- 添加查询条件属性 -->
	</select>

    <select id="getCountByEntity" resultType="java.lang.Integer">
		select count(1) from sys_user  sysUser
		<!--添加if语句添加过滤条件-->
	</select>

    <insert id="insert" parameterType="com.imust.newckbk.domain.SysUser" useGeneratedKeys="true" keyProperty="id">
		insert into sys_user (
			login_name,
			real_name,
			password,
			role_ids,
			salt,
			remark,
			create_by,
			create_time,
			deleted) 
		value (
			#{loginName,jdbcType=VARCHAR},
			#{realName,jdbcType=VARCHAR},
			#{password,jdbcType=VARCHAR},
			#{roleIds,jdbcType=VARCHAR},
			#{salt,jdbcType=VARCHAR},
			#{remark,jdbcType=VARCHAR},
			#{createBy,jdbcType=INTEGER},
			#{createTime,jdbcType=TIMESTAMP},
			#{deleted,jdbcType=TINYINT}
		)
	</insert>

    <update id="updateById" parameterType="com.imust.newckbk.domain.SysUser">
		update sys_user sysUser set
			real_name = #{realName,jdbcType=VARCHAR},
			role_ids = #{roleIds,jdbcType=VARCHAR},
			remark = #{remark,jdbcType=VARCHAR},
			update_by = #{updateBy,jdbcType=INTEGER},
			update_time = #{updateTime,jdbcType=TIMESTAMP}
		 where id= #{id} 
	</update>

    <update id="updateByMap">
		update sys_user  sysUser set
		<if test="password != null and password != ''">
			password = #{password}
		</if>
		<if test="salt != null and salt != ''">
			,salt = #{salt}
		</if>
		<where>
			id = #{id}
		</where>
		<!-- 添加查询条件属性 -->
	</update>

    <update id="deleteById" parameterType="java.lang.Integer">
		update sys_user sysUser set deleted=1
		where id=#{id}
	</update>

    <update id="deleteByMap" parameterType="java.util.Map">
		update sys_user sysUser set deleted=1
		<where>
			<if test="ids != null and ids != ''" >
				id in (${ids})
			</if>
		<!-- 添加条件属性 -->
		</where>
	</update>

    <update id="deleteByEntity" parameterType="com.imust.newckbk.domain.SysUser">
		update sys_user sysUser set deleted=1 
		where id=#{id}
	</update>
</mapper>
